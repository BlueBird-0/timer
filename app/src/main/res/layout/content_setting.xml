<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_setting">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사운드"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorOrange"
            android:id="@+id/textView4" android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray"
            android:id="@+id/constraintLayout2" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="12dp">

    </android.support.constraint.ConstraintLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우주"
            android:textSize="25dp"
            android:textColor="@color/colorOrange"
            android:id="@+id/textView5"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/constraintLayout3"
            android:layout_marginTop="12dp">

    </android.support.constraint.ConstraintLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="백색소음"
            android:textSize="25dp"
            android:textColor="@color/colorOrange"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            android:layout_marginTop="8dp" android:id="@+id/textView2"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:id="@+id/constraintLayout4"
            android:background="@color/colorGray"

            tools:layout_editor_absoluteX="-39dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

    </android.support.constraint.ConstraintLayout>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_checked" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" android:layout_marginTop="10dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:id="@+id/constraintLayout5"
            android:background="@color/colorGray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent">

    </android.support.constraint.ConstraintLayout>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_speaker"
            android:id="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"/>
    <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="299dp"
            android:layout_height="19dp"
            android:outlineAmbientShadowColor="@color/colorOrange"
            android:outlineSpotShadowColor="@color/colorOrange"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"/>





</android.support.constraint.ConstraintLayout>